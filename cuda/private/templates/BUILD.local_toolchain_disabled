load("@cuda_samples_bazel//cuda:defs.bzl", "cuda_toolchain_config_disabled")

config_setting(
    name = "cuda_is_disabled",
    flag_values = {"@cuda_samples_bazel//cuda:enable": "False"},
)

cuda_toolchain_config_disabled(name = "disabled-local")

toolchain(
    name = "disabled-local-toolchain",
    target_settings = [":cuda_is_disabled"],
    toolchain = ":disabled-local",
    toolchain_type = "@cuda_samples_bazel//cuda:toolchain_type",
    visibility = ["//visibility:public"],
)
